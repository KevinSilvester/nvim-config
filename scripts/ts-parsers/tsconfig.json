{
   "extends": "@tsconfig/node18/tsconfig.json",
   "compilerOptions": {
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "strictNullChecks": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "types": ["node"],
      "typeRoots": ["node_modules/@types", "node_modules/@octokit/types"],
      "baseUrl": "./"
   },
   "include": ["src"]
}
